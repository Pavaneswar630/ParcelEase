<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#FF5722</item>         <!-- Deep Orange -->
        <item name="colorPrimaryDark">#E64A19</item>     <!-- Darker variant -->
        <item name="colorAccent">#FFC107</item>          <!-- Amber -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>
    <!-- ========================= -->
    <!--       Text Styles         -->
    <!-- ========================= -->

    <!-- Headings -->
    <style name="TextStyle.HeaderLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="TextStyle.HeaderMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="TextStyle.HeaderSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>
    </style>

    <!-- Body and Subtext -->
    <style name="TextStyle.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="TextStyle.SubText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <!-- Chip / Status Labels -->
    <style name="TextStyle.StatusChip">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">4dp</item>
    </style>


    <!-- Text styles -->
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="StatusChip">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#4CAF50</item> <!-- Default green -->
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Button style -->
    <style name="PrimaryButton">
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailItem">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
        <style name="LabelStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">8dp</item>
        </style>

        <style name="ValueStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:text">-</item>
        </style>
    </resources>
