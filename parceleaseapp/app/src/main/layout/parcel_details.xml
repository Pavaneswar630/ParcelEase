<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back" />

        <!-- Status & ETA -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out for Delivery"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/txtDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, 2:00 PM - 4:00 PM"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txtParcelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TN: #AX878542319HK"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <!-- Package Card -->
        <LinearLayout
            android:id="@+id/package_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_truck"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txtWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight: 2.5 kg"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dimensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dimensions: 30 × 20 × 15 cm"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Delivery Address -->
        <LinearLayout
            android:id="@+id/delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDropLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main Street, Apt 48, New York, NY 10001"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Tracking History Title -->
        <TextView
            android:id="@+id/tv_tracking_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracking History"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <!-- Tracking Timeline Steps (same as before) -->
        <!-- You can keep your previous step layout here unchanged -->

        <!-- Detailed Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtPickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSenderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender Name: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSenderPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender Phone: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtReceiverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receiver Name: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtReceiverPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receiver Phone: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPackageType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package Type: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created At: "
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- QR Code Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
