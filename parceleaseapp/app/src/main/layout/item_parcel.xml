<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:elevation="4dp"
    android:layout_margin="6dp"
    android:gravity="center_vertical">

    <!-- Type Icon -->
    <ImageView
        android:id="@+id/imgBookingType"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Type Icon"
        android:src="@drawable/ic_truck"
        android:background="@drawable/bg_icon"
        android:padding="8dp" />

    <!-- Parcel Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: #1234"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-03-21"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tvFromAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: Mumbai"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvToAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: Pune"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvWeightSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: 5 kg | Size: Medium"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Status & Arrow -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:background="@color/blue"
            android:text="Confirmed"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:text=">"
            android:textColor="@color/black"
            android:tint="@color/black" />
    </LinearLayout>
</LinearLayout>
